<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mumineendownloads.mumineenaudio.Fragments.HomeFrament">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:layout_height="match_parent">

        <RelativeLayout
           android:padding="4dp"
           android:background="#0d000000"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:text="Albums"
                           android:layout_marginTop="8dp"
                           android:textColor="@color/textColor"
                           android:textSize="18sp"
                           android:layout_marginStart="8dp"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:text="All albums"
                           android:layout_marginBottom="8dp"
                           android:alpha="0.4"
                           android:textColor="@color/textColor"
                           android:textSize="13sp"
                           android:layout_marginStart="8dp"
                           android:layout_height="wrap_content" />

                   </LinearLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_centerVertical="true"
                       android:textColor="@color/textColor"
                       android:text="23 Items"
                       android:layout_height="wrap_content" />


               </RelativeLayout>

               <android.support.v7.widget.RecyclerView
                   android:overScrollMode="never"
                   android:layout_width="match_parent"
                   android:id="@+id/albums"
                   android:layout_height="wrap_content" />

           </LinearLayout>

       </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="#0d000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Playlist"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/textColor"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="All the audios you've favourited"
                            android:layout_marginBottom="8dp"
                            android:alpha="0.4"
                            android:textColor="@color/textColor"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/textColor"
                        android:text="23 Items"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:id="@+id/playlist"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="#0d000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Queue list"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/textColor"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="32 items in the queue list"
                            android:layout_marginBottom="8dp"
                            android:alpha="0.4"
                            android:textColor="@color/textColor"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <com.rey.material.widget.Button
                        style="@style/RightLink"
                        android:text="Clear Queue"
                        android:alpha="0.7"
                        android:textSize="11sp"
                        android:textColor="@color/textColor"
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_height="25dp" />


                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:id="@+id/queue"
                    android:layout_height="wrap_content" />

            </LinearLayout>

